<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transaction.SelectServicesFormatFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/valid_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Transacción de Usuario" />

        <Button
            android:id="@+id/empty_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Transacción Vacía" />

        <Button
            android:id="@+id/invalid_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Transacción mal formada" />
    </LinearLayout>


</FrameLayout>